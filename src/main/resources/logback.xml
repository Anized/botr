<configuration>
    <appender name="STDOUT" target="System.out" class="ch.qos.logback.core.ConsoleAppender">
        <encoder><pattern><![CDATA[
                        %d{HH:mm:ss.SSS} | %5.5level | %6.6thread | %X{akkaSource} | %msg %n
                ]]></pattern></encoder>
    </appender>

    <logger level="INFO" />

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
